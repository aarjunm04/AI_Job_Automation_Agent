{
  "manifest_version": 3,
  "name": "AI Job Automation Agent",
  "version": "1.0.0",
  "description": "AI-powered job automation with intelligent application management, resume optimization, and real-time job discovery across 20+ platforms.",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "notifications",
    "webNavigation",
    "contextMenus"
  ],

  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.naukri.com/*",
    "https://*.flexjobs.com/*",
    "https://*.weworkremotely.com/*",
    "https://*.remotive.io/*",
    "https://*.wellfound.com/*",
    "https://*.angel.co/*",
    "https://*.justremote.co/*",
    "https://*.workingnomads.com/*",
    "https://*.jobspresso.co/*",
    "https://*.remoteok.io/*",
    "https://*.pangian.com/*",
    "https://*.virtualvocations.com/*",
    "https://*.europeremotely.com/*",
    "https://*.remoteleads.io/*",
    "https://*.remotelabs.io/*",
    "https://*.remote.com/*",
    "https://*.jooble.org/*",
    "https://*.glassdoor.com/*",
    "https://*.dailyremote.com/*",
    "https://*.simplyhired.com/*",
    "http://localhost/*",
    "https://localhost/*"
  ],

  "background": {
  "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.naukri.com/*",
        "https://*.flexjobs.com/*",
        "https://*.weworkremotely.com/*",
        "https://*.remotive.io/*",
        "https://*.wellfound.com/*",
        "https://*.angel.co/*",
        "https://*.justremote.co/*",
        "https://*.workingnomads.com/*",
        "https://*.jobspresso.co/*",
        "https://*.remoteok.io/*",
        "https://*.pangian.com/*",
        "https://*.virtualvocations.com/*",
        "https://*.europeremotely.com/*",
        "https://*.remoteleads.io/*",
        "https://*.remotelabs.io/*",
        "https://*.remote.com/*",
        "https://*.jooble.org/*",
        "https://*.glassdoor.com/*",
        "https://*.dailyremote.com/*",
        "https://*.simplyhired.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["sidebar/sidebar.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "sidebar/sidebar.html",
    "default_title": "AI Job Automation Agent",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "sidebar/*",
        "utils/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "options_page": "sidebar/sidebar.html",

"commands": {
  "analyze_job": {
    "suggested_key": {
      "default": "Ctrl+Shift+A",
      "mac": "Command+Shift+A"
    },
    "description": "Analyze the current page"
  },
  "auto_fill_now": {
    "suggested_key": {
      "default": "Ctrl+Shift+F",
      "mac": "Command+Shift+F"
    },
    "description": "Auto-fill any form on the current page"
  },
  "toggle_sidebar": {
    "suggested_key": {
      "default": "Ctrl+Shift+S",
      "mac": "Command+Shift+S"
    },
    "description": "Toggle the extension sidebar"
  }
},

  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "https://localhost/*"
    ]
  }
}
